<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@mipmap/strong_blurred_original_background">


    <ProgressBar
        android:id="@+id/progress_circular"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:indeterminate="false"
        android:progressDrawable="@drawable/p_bar" />

    <TextView
        android:id="@+id/current_steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Steps: 0"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_above="@id/progress_circular"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/target_steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target Steps: 10000"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_below="@id/progress_circular"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/calories_burned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories Burned: 0.0"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_below="@id/target_steps"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/miles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Miles: 10000"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_below="@id/calories_burned"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/buttonUserProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/miles"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@id/buttonSetGoal"
        android:background="#8033B5E5"
        android:text="Profile" />

    <!-- Set Goal Button -->
    <Button
        android:id="@+id/buttonSetGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/miles"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="#8033B5E5"
        android:text="Set Goal" />

    <!-- User History Button -->
<!--    <Button-->
<!--        android:id="@+id/buttonUserTarget"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@id/miles"-->
<!--        android:layout_alignParentStart="true"-->
<!--        android:layout_marginStart="127dp"-->
<!--        android:layout_marginTop="5dp"-->
<!--        android:text="User Target" />-->

    <Button
        android:id="@+id/buttonUserHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/miles"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@id/buttonSetGoal"
        android:background="#8033B5E5"
        android:text="History" />

</RelativeLayout>


